<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/trans_40px"
              android:paddingLeft="@dimen/trans_55px"
              android:paddingRight="@dimen/trans_40px"
              android:paddingTop="@dimen/trans_40px">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ic_pic"
        android:layout_width="@dimen/trans_125px"
        android:layout_height="@dimen/trans_125px"
        android:layout_marginRight="@dimen/trans_40px"
        android:src="@color/color_44c745"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="郭青枫"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_trans_28px"
            android:textStyle="bold"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/trans_30px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="交易 4"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_trans_24px"/>

            <View
                android:layout_width="@dimen/trans_2px"
                android:layout_height="@dimen/trans_24px"
                android:layout_marginLeft="@dimen/trans_10px"
                android:layout_marginRight="@dimen/trans_10px"
                android:background="@color/color_666666"/>

            <TextView
                android:id="@+id/tv_appraise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="好评 100%"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_trans_24px"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>