<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/trans_40px"
        android:paddingLeft="@dimen/trans_40px"
        android:paddingRight="@dimen/trans_40px"
        android:paddingBottom="@dimen/trans_20px"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ic_pic"
                android:layout_width="@dimen/trans_60px"
                android:layout_height="@dimen/trans_60px"
                android:layout_marginRight="@dimen/trans_30px"
                android:src="@color/color_44c745"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingRight="@dimen/trans_30px"
                        android:text="Appleseed"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/text_trans_22px"/>

                    <LinearLayout
                        android:id="@+id/lin_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/trans_20px"
                            android:background="@drawable/shape_yellow_radiu"
                            android:gravity="center"
                            android:paddingBottom="@dimen/trans_3px"
                            android:paddingLeft="@dimen/trans_5px"
                            android:paddingRight="@dimen/trans_5px"
                            android:paddingTop="@dimen/trans_3px"
                            android:text="极速"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_trans_16px"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/trans_20px"
                            android:background="@drawable/shape_yellow_radiu"
                            android:gravity="center"
                            android:paddingBottom="@dimen/trans_3px"
                            android:paddingLeft="@dimen/trans_5px"
                            android:paddingRight="@dimen/trans_5px"
                            android:paddingTop="@dimen/trans_3px"
                            android:text="安全"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_trans_16px"/>
                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_15px"/>

                <TextView
                    android:id="@+id/tv_toast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="交易限额 2000-3000 CNY"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_trans_16px"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="20000"
                    android:textColor="@color/color_44c745"
                    android:textSize="@dimen/text_trans_28px"/>

                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/trans_3px"
                    android:paddingLeft="@dimen/trans_10px"
                    android:text="CNY"
                    android:textColor="@color/color_44c745"
                    android:textSize="@dimen/text_trans_18px"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/trans_45px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_label1_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="100"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_trans_22px"/>

                <TextView
                    android:id="@+id/tv_label1_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="交易次数"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_trans_22px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_label2_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="28000-30000 CNY"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_trans_22px"/>

                <TextView
                    android:id="@+id/tv_label2_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="历史成交金额"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_trans_22px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_label3_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="100%"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_trans_22px"/>

                <TextView
                    android:id="@+id/tv_label3_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="好评"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_trans_22px"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_1px"
            android:layout_marginTop="@dimen/trans_20px"
            android:background="@color/color_e5e5e5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/trans_25px"
            android:text="接受支付宝、微信、现金存款等多种支付方式。上海地区最好能够当面交易。"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_trans_26px"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_20px"
        android:background="@color/color_f5f5f5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/trans_40px"
        android:paddingRight="@dimen/trans_40px"
        >

        <EditText
            android:id="@+id/et_forecast_cny"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:hint="预计购买额度"
            android:paddingBottom="@dimen/trans_40px"
            android:paddingTop="@dimen/trans_40px"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_trans_22px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/trans_20px"
            android:paddingRight="@dimen/trans_20px"
            android:text="CNY"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_trans_22px"/>

        <com.fivefivelike.mybaselibrary.view.IconFontTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/ic_shuangxiangjiantou"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_trans_30px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/trans_20px"
            android:paddingRight="@dimen/trans_20px"
            android:text="BTC"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_trans_22px"/>

        <EditText
            android:id="@+id/et_forecast_btc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:hint="预计购买数量"
            android:paddingBottom="@dimen/trans_40px"
            android:paddingTop="@dimen/trans_40px"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_trans_22px"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_20px"
        android:background="@color/color_f5f5f5"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/trans_20px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/trans_20px"
                android:text="系统自动帮我选托管人"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_trans_30px"/>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/checkbox"
                style="@style/SwitchButtonStyle"
                android:layout_width="@dimen/trans_80px"
                android:layout_height="@dimen/trans_80px"
                android:layout_centerInParent="true"
                android:checked="false"
                app:kswAnimationDuration="300"
                app:kswBackDrawable="@drawable/ios_back_drawable"
                app:kswBackMeasureRatio="1.4"
                app:kswThumbDrawable="@drawable/ios_thumb_selector"
                app:kswThumbMarginBottom="-8dp"
                app:kswThumbMarginLeft="-5dp"
                app:kswThumbMarginRight="-5dp"
                app:kswThumbMarginTop="-2.5dp"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/trans_20px"
            android:paddingLeft="@dimen/trans_20px"
            android:text="请在下面担保人中选择一个你信任的"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_trans_24px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_1px"
            android:layout_marginLeft="@dimen/trans_20px"
            android:layout_marginRight="@dimen/trans_20px"
            android:background="@color/color_e5e5e5"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_guarantor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_20px"
        android:background="@color/color_f5f5f5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/trans_40px"
        android:paddingRight="@dimen/trans_40px"
        android:paddingTop="@dimen/trans_40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/trans_20px"
            android:text="咨询留言"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_trans_30px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_1px"
            android:background="@color/color_e5e5e5"/>

        <TextView
            android:id="@+id/tv_no_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/trans_20px"
            android:text="暂时还没有人留言哦"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_trans_30px"/>

    </LinearLayout>

</LinearLayout>
