<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/trans_20px"
              android:paddingTop="@dimen/trans_20px">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/trans_37px"
        android:layout_height="@dimen/trans_37px"
        android:layout_marginRight="@dimen/trans_20px"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ic_header"
        android:layout_width="@dimen/trans_40px"
        android:layout_height="@dimen/trans_40px"
        android:layout_marginRight="@dimen/trans_10px"
        android:src="@color/color_blue"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="玩币大神"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_trans_24px"/>


</LinearLayout>