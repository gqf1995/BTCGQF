<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="@dimen/trans_40px"
              android:paddingRight="@dimen/trans_40px"
              android:paddingTop="@dimen/trans_30px">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/trans_10px">

        <View
            android:layout_width="@dimen/trans_22px"
            android:layout_height="@dimen/trans_22px"
            android:layout_marginRight="@dimen/trans_15px"
            android:background="@drawable/shape_red_max_radiu"/>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="订单-265151225415212"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_trans_32px"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/trans_15px"
            android:layout_marginRight="@dimen/trans_15px"
            android:background="@drawable/shape_blue_max_radiu"
            android:gravity="center"
            android:paddingBottom="@dimen/trans_5px"
            android:paddingLeft="@dimen/trans_15px"
            android:paddingRight="@dimen/trans_15px"
            android:paddingTop="@dimen/trans_5px"
            android:text="购买"
            android:textColor="@color/white"
            android:textSize="@dimen/text_trans_18px"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="17:55"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_trans_22px"/>

        <com.fivefivelike.mybaselibrary.view.IconFontTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:rotation="-90"
            android:text="@string/ic_zhankai"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_trans_30px"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/trans_37px"
        android:gravity="center"
        android:paddingBottom="@dimen/trans_10px"
        android:text="待买家付款"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_trans_28px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/trans_37px">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/trans_25px"
            android:text="单价 20000 CNY"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_trans_28px"/>

        <TextView
            android:id="@+id/tv_order_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="交易额 40000 CNY"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_trans_28px"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_1px"
        android:layout_marginTop="@dimen/trans_30px"
        android:background="@color/color_e5e5e5"/>

</LinearLayout>