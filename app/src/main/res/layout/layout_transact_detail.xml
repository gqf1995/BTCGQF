<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/trans_40px"
        android:paddingRight="@dimen/trans_40px">

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_20px"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易金额"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_trans_24px"/>

            <com.gqfbtc.widget.SingleLineZoomTextView
                android:id="@+id/tv_total_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/trans_40px"
                android:paddingRight="@dimen/trans_20px"
                android:text="20000 CNY"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_trans_24px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手\t续\t费"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_trans_24px"/>

            <TextView
                android:id="@+id/tv_poundage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="17"
                android:gravity="right"
                android:paddingLeft="@dimen/trans_20px"
                android:text="200 CNY"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_trans_24px"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_20px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易单价"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_trans_24px"/>

            <com.gqfbtc.widget.SingleLineZoomTextView
                android:id="@+id/tv_unit_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/trans_40px"
                android:paddingRight="@dimen/trans_20px"
                android:text="20000 CNY"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_trans_24px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易数量"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_trans_24px"/>

            <TextView
                android:id="@+id/tv_btc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="17"
                android:gravity="right"
                android:paddingLeft="@dimen/trans_20px"
                android:text="1 CNY"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_trans_24px"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_20px"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_1px"
        android:layout_marginLeft="@dimen/trans_40px"
        android:layout_marginRight="@dimen/trans_40px"
        android:background="@color/color_e5e5e5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/trans_20px"
            android:paddingLeft="@dimen/trans_40px"
            android:paddingRight="@dimen/trans_20px"
            android:paddingTop="@dimen/trans_20px">

            <TextView
                android:id="@+id/tv_freeze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="您已被冻结 1 BTC"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_trans_30px"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/trans_10px"/>

            <com.gqfbtc.widget.SingleLineZoomTextView
                android:id="@+id/tv_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="等待买家付款 20000 CNY"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_trans_24px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_my_pay_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/trans_20px"
            android:paddingTop="@dimen/trans_20px">

            <com.fivefivelike.mybaselibrary.view.IconFontTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/ic_qianbao"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_trans_45px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/trans_20px"
                android:text="我的收款方式"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_trans_32px"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_call_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/trans_40px"
        android:layout_marginTop="@dimen/trans_15px"
        android:background="@drawable/shap_blue_border_radiu"
        android:gravity="center"
        android:paddingBottom="@dimen/trans_12px"
        android:paddingLeft="@dimen/text_trans_75px"
        android:paddingRight="@dimen/trans_75px"
        android:paddingTop="@dimen/trans_12px"
        android:text="要求客服介入"
        android:textColor="@color/color_blue"
        android:textSize="@dimen/text_trans_28px"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_1px"
        android:background="@color/color_e5e5e5"/>

</LinearLayout>