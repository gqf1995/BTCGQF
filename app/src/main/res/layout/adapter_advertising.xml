<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="@dimen/trans_40px"
              android:paddingRight="@dimen/trans_40px"
              android:paddingTop="@dimen/trans_30px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ic_pic"
                    android:layout_width="@dimen/trans_80px"
                    android:layout_height="@dimen/trans_80px"
                    android:layout_marginRight="@dimen/trans_40px"
                    android:src="@color/color_blue"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingRight="@dimen/trans_5px"
                            android:text="dasdas"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/text_trans_24px"/>

                        <View
                            android:layout_width="@dimen/trans_2px"
                            android:layout_height="@dimen/trans_25px"
                            android:background="@color/color_999999"/>

                        <TextView
                            android:id="@+id/tv_appraise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="@dimen/trans_5px"
                            android:text="好评100%"
                            android:textColor="@color/color_999999"
                            android:textSize="@dimen/text_trans_24px"/>

                    </LinearLayout>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/trans_15px"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_label1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/trans_20px"
                            android:background="@drawable/shap_orange_border"
                            android:gravity="center"
                            android:paddingBottom="@dimen/trans_3px"
                            android:paddingLeft="@dimen/trans_10px"
                            android:paddingRight="@dimen/trans_10px"
                            android:paddingTop="@dimen/trans_3px"
                            android:text="急速"
                            android:textColor="@color/color_d2b567"
                            android:textSize="@dimen/text_trans_16px"/>

                        <TextView
                            android:id="@+id/tv_label2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shap_green_border"
                            android:gravity="center"
                            android:paddingBottom="@dimen/trans_3px"
                            android:paddingLeft="@dimen/trans_10px"
                            android:paddingRight="@dimen/trans_10px"
                            android:paddingTop="@dimen/trans_3px"
                            android:text="支持安全买"
                            android:textColor="@color/color_44c745"
                            android:textSize="@dimen/text_trans_16px"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/trans_20px">

                <TextView
                    android:id="@+id/tv_sell_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="@dimen/trans_20px"
                    android:text="出售"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_trans_20px"/>

                <TextView
                    android:id="@+id/tv_sell_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="@dimen/trans_20px"
                    android:text="1200"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_trans_20px"/>

                <TextView
                    android:id="@+id/tv_sell_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="@dimen/trans_20px"
                    android:text="CNY"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_trans_20px"/>

                <TextView
                    android:id="@+id/tv_start_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/trans_20px"
                    android:paddingRight="@dimen/trans_20px"
                    android:text="起售"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_trans_20px"/>

                <TextView
                    android:id="@+id/tv_start_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="@dimen/trans_20px"
                    android:text="2000"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_trans_20px"/>

                <TextView
                    android:id="@+id/tv_start_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="@dimen/trans_20px"
                    android:text="CNY"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_trans_20px"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|right"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/trans_40px"
                android:paddingTop="@dimen/trans_10px">


                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="2200"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/text_trans_24px"/>

                <TextView
                    android:id="@+id/tv_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/trans_2px"
                    android:paddingLeft="@dimen/trans_17px"
                    android:text="CNY"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/text_trans_20px"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_blue_border_max_radiu"
                android:gravity="center"
                android:paddingBottom="@dimen/trans_10px"
                android:paddingLeft="@dimen/trans_30px"
                android:paddingRight="@dimen/trans_30px"
                android:paddingTop="@dimen/trans_10px"
                android:text="购买"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_trans_30px"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_1px"
        android:layout_marginTop="@dimen/trans_30px"
        android:background="@color/color_e5e5e5"/>

</LinearLayout>